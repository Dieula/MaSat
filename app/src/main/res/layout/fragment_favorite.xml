<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc6600"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="dieula.MaSat.fragment.FavoriteFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#cc6600"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivrecette"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/ma"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/titlerecette"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:alpha="0.8"
                    android:padding="1dp"
                    android:layout_marginTop="-10dp"
                    android:background="#5c1b1b1b"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="Nom Produit"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearIn"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="-55dp"
                    android:weightSum="1"
                    android:background="#FFF"
                    tools:ignore="UnknownIdInLayout">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prix: 500 gourdes"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnshare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom|end"
                        android:layout_marginBottom="80dp"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_marginRight="@dimen/fab_margin"
                        card_view:srcCompat="@android:drawable/ic_menu_share"
                        tools:ignore="RelativeOverlap" />


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnfavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btnshare"
                        android:layout_gravity="top"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="@dimen/fab_margin"
                        card_view:srcCompat="@mipmap/ic_favorite"
                        tools:ignore="RtlHardcoded" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnbuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/fab_margin"
                        card_view:srcCompat="@mipmap/ic_buyy"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

