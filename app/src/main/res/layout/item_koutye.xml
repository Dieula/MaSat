<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#FFF"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">


    <ImageView
        android:id="@+id/imageV"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/titlerecette"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:alpha="0.8"
                android:background="#5c1b1b1b"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Nom Produit"
                android:textColor="#fff"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="190dp">


                <ImageView
                    android:id="@+id/ivLocalisation"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_buy"
                    android:layout_marginLeft="70dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:layout_width="45dp"
                    android:id="@+id/ivCoeur"
                    android:layout_height="45dp"
                    app:srcCompat="@mipmap/heart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:id="@+id/tvDetails"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="280dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="DÃ©tails"
                    android:textColor="@color/colorAccent"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>